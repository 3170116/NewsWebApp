@{
    ViewData["Title"] = "Επικαιρότητα";
}

@using NewsAPI.Models;

<style>
    img {
        width: 100%;
    }
</style>

<div>

    @{
        var articles = (List<Article>) ViewData["topNews"];

        int i = 0;
        for (; i < articles.Count(); i += 3)
        {

        <div class="row">

            <div class="news_item col-md-4 col-sm-12 justify-content-center">

                <div class="col-md-12 col-sm-12">
                    <a href="@articles[i].Url"><img src="@articles[i].UrlToImage" alt="Δε μπόρεσε να φορτωθεί η εικόνα!" /></a>
                </div>
                <div class="col-md-12 col-sm-12">
                    <h5>@articles[i].Title</h5>
                </div>

            </div>

            @if (i + 1 < articles.Count())
            {
                <div class="news_item col-md-4 col-sm-12 justify-content-center">

                    <div class="col-md-12 col-sm-12">
                        <a href="@articles[i+1].Url"><img src="@articles[i+1].UrlToImage" alt="Δε μπόρεσε να φορτωθεί η εικόνα!" /></a>
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <h5>@articles[i+1].Title</h5>
                    </div>

                </div>
            }

            @if (i + 2 < articles.Count())
            {
                <div class="news_item col-md-4 col-sm-12 justify-content-center">

                    <div class="col-md-12 col-sm-12">
                        <a href="@articles[i+2].Url"><img src="@articles[i+2].UrlToImage" alt="Δε μπόρεσε να φορτωθεί η εικόνα!" /></a>
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <h5>@articles[i+2].Title</h5>
                    </div>

                </div>
            }

        </div>

        }

    }

</div>